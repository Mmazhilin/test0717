<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	version="4.0" metadata-complete="true">


	<!-- Servlet定義 -->
	<servlet>
		<servlet-name>OrderServlet</servlet-name>
		<servlet-class>com.example.servlet.OrderServlet</servlet-class>
	</servlet>

	<!-- Servlet映射 -->
	<servlet-mapping>
		<servlet-name>OrderServlet</servlet-name>
		<url-pattern>/doOrderServlet</url-pattern>
	</servlet-mapping>


	<!-- Servlet定義 -->
	<servlet>
		<servlet-name>OrderSummaryServlet</servlet-name>
		<servlet-class>com.example.servlet.OrderSummaryServlet</servlet-class>
	</servlet>

	<!-- Servlet映射 -->
	<servlet-mapping>
		<servlet-name>OrderSummaryServlet</servlet-name>
		<url-pattern>/doOrderSummary</url-pattern>
	</servlet-mapping>


	<!-- Servlet定義 -->
	<servlet>
		<servlet-name>OrderConfirmServlet</servlet-name>
		<servlet-class>com.example.servlet.OrderConfirmServlet</servlet-class>
	</servlet>

	<!-- Servlet映射 -->
	<servlet-mapping>
		<servlet-name>OrderConfirmServlet</servlet-name>
		<url-pattern>/doOrderConfirmServlet</url-pattern>
	</servlet-mapping>

</web-app>
